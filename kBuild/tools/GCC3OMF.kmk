TOOL_GCC3OMF_LINK_SYSMOD_OUTPUT = $(outbase).map
TOOL_GCC3OMF_LINK_SYSMOD_DEPEND = $(foreach lib,$(libs),$(if $(findstring $(lib),$(subst /,x,$(lib))),, $(lib)))\
	 $(filter %.def, $(othersrc))
TOOL_GCC3OMF_LINK_SYSMOD_DEPORD =
define TOOL_GCC3OMF_LINK_SYSMOD_CMDS
	$(QUIET)$(TOOL_GCC3OMF_LD_SYSMOD) $(TOOL_GCC3OMF_LDFLAGS.sysmod) $(flags) -o $(out) $(objs)\
		$(filter %.def, $(othersrc))\
		$(foreach p,$(libpath), -L$(p))\
		$(foreach lib,$(libs), $(if $(findstring $(lib),$(subst /,x,$(lib))), -l$(patsubst lib%,%,$(basename $(lib))), $(lib)))\
		$(call TOOL_GCC3_LD_SYSMOD_MAP,$(outbase).map)
endef

