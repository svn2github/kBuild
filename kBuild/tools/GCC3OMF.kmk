## Link library
# @param    $(target)   Normalized main target name.
# @param    $(out)		Library name.
# @param    $(objs)     Object files to put in the library.
# @param    $(flags)    Flags.
# @param    $(dirdep)   Directory creation dependency.
# @param    $(deps)		Other dependencies.
# @param    $(othersrc) Unhandled sources.
#
# @param    $(outbase)  Output basename (full). Use this for list files and such.
TOOL_GCC3OMF_LINK_LIBRARY_OUTPUT =
TOOL_GCC3OMF_LINK_LIBRARY_DEPEND = $(othersrc) $(outbase).rsp
TOOL_GCC3OMF_LINK_LIBRARY_DEPORD =
define TOOL_GCC3OMF_LINK_LIBRARY_CMDS
	$(if $(filter %.def %.imp,$(othersrc))\
		,$(QUIET)$(APPEND) -n $(outbase).rsp $(out) $(filter %.def %.imp,$(othersrc))\
		 $(NL)$(TAB)$(QUIET)$(QUIET)$(TOOL_GCC3OMF_AR_IMP) -o $(out) @$(outbase).rsp\
		 $(NL)$(TAB)$(QUIET)$(RM) -f $(outbase).rsp)
	$(QUIET)$(APPEND) -n $(outbase).rsp $(objs) $(filter-out %.def %.imp,$(othersrc))
	$(QUIET)$(TOOL_GCC3OMF_AR) $(flags) $(out) @$(outbase).rsp
endef


## Link program
# @param    $(target)   Normalized main target name.
# @param    $(out)		Program name.
# @param    $(objs)     Object files to link together.
# @param    $(libs)     Libraries to search.
# @param    $(libpath)  Library search paths.
# @param    $(flags)    Flags.
# @param    $(dirdep)   Directory creation dependency.
# @param    $(deps)		Other dependencies.
# @param    $(othersrc) Unhandled sources.
# @param    $(custom_pre)   Custom step invoked before linking.
# @param    $(custom_post)  Custom step invoked after linking.
#
# @param    $(outbase)  Output basename (full). Use this for list files and such.
TOOL_GCC3OMF_LINK_PROGRAM_OUTPUT = $(outbase).map
TOOL_GCC3OMF_LINK_PROGRAM_DEPEND = $(foreach lib,$(libs),$(if $(findstring $(lib),$(subst /,x,$(lib))),, $(lib)))\
	$(filter %.def, $(othersrc))
TOOL_GCC3OMF_LINK_PROGRAM_DEPORD =
define TOOL_GCC3OMF_LINK_PROGRAM_CMDS
	$(QUIET)$(TOOL_GCC3OMF_LD) $(flags) -o $(out) $(objs)\
		$(filter %.def, $(othersrc))\
		$(foreach p,$(libpath), -L$(p))\
		$(foreach lib,$(libs), $(if $(findstring $(lib),$(subst /,x,$(lib))), -l$(patsubst lib%,%,$(basename $(lib))), $(lib)))\
		$(call TOOL_GCC3_LD_MAP,$(outbase).map)
endef


## Link DLL
# @param    $(target)   Normalized main target name.
# @param    $(out)		Program name.
# @param    $(objs)     Object files to link together.
# @param    $(libs)     Libraries to search.
# @param    $(libpath)  Library search paths.
# @param    $(flags)    Flags.
# @param    $(dirdep)   Directory creation dependency.
# @param    $(deps)		Other dependencies.
# @param    $(othersrc) Unhandled sources.
# @param    $(custom_pre)   Custom step invoked before linking.
# @param    $(custom_post)  Custom step invoked after linking.
#
# @param    $(outbase)  Output basename (full). Use this for list files and such.
TOOL_GCC3OMF_LINK_DLL_OUTPUT = $(outbase).map
TOOL_GCC3OMF_LINK_DLL_DEPEND = $(foreach lib,$(libs),$(if $(findstring $(lib),$(subst /,x,$(lib))),, $(lib)))\
	$(filter %.def, $(othersrc))
TOOL_GCC3OMF_LINK_DLL_DEPORD =
define TOOL_GCC3OMF_LINK_DLL_CMDS
	$(QUIET)$(TOOL_GCC3OMF_LD) $(TOOL_GCC3OMF_LDFLAGS.dll) $(flags) -o $(out) $(objs)\
		$(filter %.def, $(othersrc))\
		$(foreach p,$(libpath), -L$(p))\
		$(foreach lib,$(libs), $(if $(findstring $(lib),$(subst /,x,$(lib))), -l$(patsubst lib%,%,$(basename $(lib))), $(lib)))\
		$(call TOOL_GCC3_LD_MAP,$(outbase).map)
endef

